{
	"manifest_version": 2,
	"name": "First Paint",
	"version": "0.1",
	"browser_action" : {
		"default_icon": "icons/timer48.png",
		"default_popup": "popup.html"
	},
	"icons": { "16": "icons/timer16.png",
           "48": "icons/timer48.png",
          "128": "icons/timer128.png" },
	"background": {
		"scripts": ["background.js"]
	},
	"permissions": ["storage"],
	"content_scripts": [{
		"matches": ["http://*/*", "https://*/*"],
		"js": ["domTimes.js"]
	}]
}